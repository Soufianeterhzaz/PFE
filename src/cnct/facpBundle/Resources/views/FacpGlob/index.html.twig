{% extends "cnctfacpBundle::layout.html.twig" %}

{% block title %}
	Administration - {{ parent() }}
{% endblock %}
{% block menu %}
        <h1><font color="#800080">Administration</font></h1>
{% endblock %}
{% block facp_body %}
<h1>FacpGlob list</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Num</th>
            <th>Origine</th>
            <th>Non conformité</th>
            <th>Date_non_conformite</th>
            <th>Enonce</th>
            <th>Resp_concerne</th>
            <th>Détecteur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('facpglob_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.num }}</td>
            <td>{{ entity.origine }}</td>
            <td>{{ entity.nonconformite }}</td>
            <td>{% if entity.datenonconformite %}{{ entity.datenonconformite|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.enonce }}</td>
            <td>{{ entity.respconcerne }}</td>
            <td>{{ entity.detecteur }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('facpglob_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('facpglob_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('facpglob_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}