{% extends "cnctfacpBundle::layout.html.twig" %}

{% block title %}
	Administration - {{ parent() }}
{% endblock %}
{% block menu %}
        <h1><font color="#800080">Administration</font></h1>
{% endblock %}
{% block facp_body %}
<h1>Liste des processus</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code_pro</th>
            <th>Libelle</th>
            <th>Pilote</th>
            <th>Interime</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('processus_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.codepro }}</td>
            <td>{{ entity.libelle }}</td>
            <td>{{ entity.pilote }}</td>
            <td>{{ entity.interime }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('processus_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('processus_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('processus_new') }}">
            Cr√©er un nouveau processus
        </a>
    </li>
</ul>
{% endblock %}