{% extends "cnctfacpBundle::layout.html.twig" %}

{% block title %}
	Administration - {{ parent() }}
{% endblock %}
{% block menu %}
        <h1><font color="#800080">Administration</font></h1>
{% endblock %}
{% block facp_body %}
<h1>Liste des directions</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code_dir</th>
            <th>Libelle</th>
            <th>Directeur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('direction_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.codedir }}</td>
            <td>{{ entity.libelle }}</td>
            <td>{{ entity.directeur }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('direction_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('direction_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('direction_new') }}">
            Cr√©er une nouvelle direction
        </a>
    </li>
</ul>
{% endblock %}