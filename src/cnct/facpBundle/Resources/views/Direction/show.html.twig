{% extends "cnctfacpBundle::layout.html.twig" %}

{% block title %}
	Administration - {{ parent() }}
{% endblock %}
{% block menu %}
        <h1><font color="#800080">Administration</font></h1>
{% endblock %}
{% block facp_body %}
<h1>Direction</h1>

<table class="table table-striped well">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Code_dir</th>
            <td>{{ entity.codedir }}</td>
        </tr>
        <tr>
            <th>Libelle</th>
            <td>{{ entity.libelle }}</td>
        </tr>
        <tr>
            <th>Directeur</th>
            <td>{{ entity.directeur }}</td>
        </tr>
    </tbody>
</table>

<p>
		<a href="{{ path('direction') }}" class="btn">
			<i class="icon-chevron-left"></i>
			Retour Ã  la liste
		</a>
		<a href="{{ path('direction_edit', { 'id': entity.id }) }}" class="btn">
			<i class="icon-edit"></i>
			Editer une direction
		</a>
		
                <form action="{{ path('direction_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button type="submit">Supprimer</button>
                </form>
</p>

{% endblock %}