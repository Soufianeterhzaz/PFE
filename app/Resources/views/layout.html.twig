<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

		<title>{% block title %}FACP{% endblock %}</title>


		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
		{% endblock %}
	</head>

	<body>
                <nav class="navbar navbar-fixed-top">
                            <div class="navbar-inner">
                                <div class="container">
                                    <ul class="nav">
                                        <li class="nav">Date: {{ "now"|date("d/M/Y") }}</li>
                                        <li class="divider-vertical"></li>
                                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                              Connecté en tant que {{ app.user.username }} - <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                                            {% else %}
                                                <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                                            {% endif %}
                                        
                                    </ul>
                                </div>
                            </div>
                </nav>
		<div class="container">
			<div id="header" class="hero-unit">
				<h1>C.N. de Cartographie et de Télédétection</h1>
				
			</div>
               
			<div class="row">
				<div id="menu" class="span3">
					<h3>Menu</h3>
					<ul class="nav nav-pills nav-stacked">
						<li><a href="{{ path('cnctfacpBundle_homepage') }}">Administration</a></li>
                                                <li><a href="{{ path('cnctfacpBundle_homepage') }}">Nouvelle FACP</a></li>
					</ul>
				</div>
				<div id="content" class="span9">
					{% block body %}
					{% endblock %}
				</div>
			</div>

			<hr>

                        <footer class="footer">
				<p>The sky's the limit &copy; 2012 and beyond.</p>
			</footer>
		</div>

	{% block javascripts %}
		{# Ajoutez ces javascripts si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
		<script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
	{% endblock %}

	</body>
</html>